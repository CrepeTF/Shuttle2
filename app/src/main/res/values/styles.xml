<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Themes -->

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_window_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="tabLayoutStyle">@style/TabLayout.AppTheme.Dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textViewStyle">@style/Widget.Shuttle.TextView</item>
        <item name="toolbarStyle">@style/Widget.Shuttle.Toolbar</item>
        <item name="imageButtonStyle">@style/Widget.Shuttle.ImageButton</item>

        <item name="historyButtonBackgroundColor">@color/history_green_primary</item>
        <item name="recentlyAddedButtonBackgroundColor">@color/recently_added_yellow_primary</item>
        <item name="favoritesButtonBackgroundColor">@color/favorite_red_primary</item>
        <item name="shuffleButtonBackgroundColor">@color/shuffle_blue_primary</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Shuttle.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Shuttle.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Shuttle.LargeComponent</item>

        <item name="preferenceTheme">@style/Shuttle.PreferenceThemeOverlay</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>

        <item name="guidelineColor">@color/vertical_seekbar_guideline_light</item>

        <item name="placeholderBackgroundColor">@color/bg_placeholder</item>

        <item name="helperTextTextColor">@color/helperTextColor</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/bg_window_dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="tabLayoutStyle">@style/TabLayout.AppTheme.Dark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/Widget.Shuttle.TextView</item>
        <item name="toolbarStyle">@style/Widget.Shuttle.Toolbar</item>
        <item name="imageButtonStyle">@style/Widget.Shuttle.ImageButton</item>

        <item name="historyButtonBackgroundColor">@color/history_green_primary_dark</item>
        <item name="recentlyAddedButtonBackgroundColor">@color/recently_added_yellow_primary_dark</item>
        <item name="favoritesButtonBackgroundColor">@color/favorite_red_primary_dark</item>
        <item name="shuffleButtonBackgroundColor">@color/shuffle_blue_primary_dark</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Shuttle.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Shuttle.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Shuttle.LargeComponent</item>

        <item name="preferenceTheme">@style/Shuttle.PreferenceThemeOverlay</item>

        <item name="bottomSheetDialogTheme">@style/Shuttle.BottomSheetDialog.Dark</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>

        <item name="android:navigationBarColor">@color/bg_window_dark</item>

        <item name="guidelineColor">@color/vertical_seekbar_guideline_dark</item>

        <item name="placeholderBackgroundColor">@color/bg_placeholder_dark</item>

        <item name="helperTextTextColor">@color/helperTextColor</item>
    </style>

    <style name="AppTheme.DayNight" parent="AppTheme.Light" />


    <!-- Image Buttons-->

    <style name="Widget.Shuttle.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">?android:textColorPrimary</item>
    </style>


    <!-- Text Items-->

    <style name="TextTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <!-- Toolbar -->

    <style name="TextAppearance.Shuttle.Toolbar" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Widget.Shuttle.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Shuttle.Toolbar</item>
    </style>


    <!-- TextView -->

    <style name="Widget.Shuttle.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <!-- FastScroll -->

    <style name="FastScrollRecyclerView">
        <item name="fastScrollPopupBgColor">@color/colorPrimary</item>
        <item name="fastScrollPopupTextColor">@android:color/primary_text_dark</item>
        <item name="fastScrollThumbColor">@color/colorPrimary</item>
        <item name="fastScrollThumbInactiveColor">@color/colorPrimary</item>
    </style>


    <!-- TabLayout -->

    <style name="TextAppearance.Shuttle.TabItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TabLayout.AppTheme.Dark" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextColor">?android:textColorPrimary</item>
        <item name="tabSelectedTextColor">?colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Shuttle.TabItem</item>
    </style>


    <!-- Overflow Image Button -->

    <style name="Widget.Shuttle.OverflowButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="srcCompat">@drawable/ic_more_vert_black_24dp</item>
    </style>

    <!-- Home Buttons -->

    <attr name="historyButtonBackgroundColor" format="reference|color" />
    <attr name="recentlyAddedButtonBackgroundColor" format="reference|color" />
    <attr name="favoritesButtonBackgroundColor" format="reference|color" />
    <attr name="shuffleButtonBackgroundColor" format="reference|color" />


    <!-- Material Shapes-->

    <style name="ShapeAppearance.Shuttle.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.Shuttle.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Shuttle.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <!-- Settings Fragment-->

    <style name="Shuttle.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="Shuttle.BottomSheetDialog.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="colorBackgroundFloating">#121212</item>
    </style>


    <!-- Toolbar -->

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?android:textColorPrimary</item>
    </style>


    <!-- Equalizer-->

    <attr name="guidelineColor" format="reference|color" />


    <!-- Placeholder-->

    <attr name="placeholderBackgroundColor" format="reference|color" />


    <!-- Chips -->

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialComponents.Chip_Thin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2_Thin</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip_Thin" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2_Thin" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
    </style>


</resources>